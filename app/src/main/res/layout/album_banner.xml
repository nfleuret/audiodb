<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/album_banner_root"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_95"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline_v_8"
        app:layout_constraintRight_toLeftOf="@+id/guideline_v_95"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/alabaster"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="10dp"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            >


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.01"
            app:layout_constraintTop_toTopOf="parent"
            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_15"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_85"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_90"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"
            app:layout_constraintTop_toTopOf="parent"
            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h_95"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/album_picture"
            app:layout_constraintLeft_toRightOf="@+id/guideline_v_2"
            app:layout_constraintRight_toLeftOf="@+id/guideline_v_15"
            app:layout_constraintTop_toTopOf="@+id/guideline_h_2"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_h_95"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_placeholder_album"
            />

        <TextView
            android:id="@+id/album_name"
            app:layout_constraintTop_toBottomOf="@+id/guideline_h_2"
            app:layout_constraintLeft_toRightOf="@+id/guideline_v_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="After hours"
            />

        <TextView
            android:id="@+id/album_year"
            app:layout_constraintTop_toBottomOf="@+id/album_name"
            app:layout_constraintLeft_toRightOf="@+id/guideline_v_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:textStyle="bold"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:text="2020"
            />

        <ImageView
            android:id="@+id/right_arrow"
            app:layout_constraintRight_toRightOf="@+id/guideline_v_90"
            app:layout_constraintLeft_toRightOf="@+id/guideline_v_85"
            app:layout_constraintTop_toTopOf="@+id/guideline_h_2"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_h_95"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/right_arrow"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
